# Filename: Makefile
#
# Purpose:  Makefile for cctest
#
# Author:   Stephen Page

override cpu   := $(shell uname -m)
override os    := $(shell uname -s)

# Paths

exec_path       = $(os)/$(cpu)
exec            = $(exec_path)/cctest
dep_path        = $(os)/$(cpu)/dep
inc_path        = inc
obj_path        = $(os)/$(cpu)/obj
src_path        = src
dropbox_path    = /c/Dropbox/cctest
sd_path         = /sdcard/projects/webplots

# Libraries

libfg_path      = ../libfg
libfg_inc       = $(libfg_path)/inc
libfg_src       = $(libfg_path)/src

libreg_path     = ../libreg
libreg_inc      = $(libreg_path)/inc
libreg_src      = $(libreg_path)/src

libs            = -lm

# Source and objects

vpath %.c $(src_path):$(libfg_src):$(libreg_src)
vpath %.h $(inc_path):$(libfg_inc):$(libreg_inc)

source          = $(notdir $(wildcard $(src_path)/*.c $(libfg_src)/*.c $(libreg_src)/*.c))
objects         = $(source:%.c=$(obj_path)/%.o)

# header files

includes       += -I$(inc_path) -I$(libfg_inc) -I$(libreg_inc)

# Tools

CC              := $(shell which gcc)

CFLAGS          = -O3 -g -Wall

# Targets

all: $(exec)

# libreg pars.h and init_pars.h are both generated by pars.awk

$(objects): $(libreg_inc)/pars.h

$(libreg_inc)/pars.h: $(libreg_path)/parameters/pars.csv $(libreg_path)/parameters/pars.awk
	cd $(libreg_path); awk -f parameters/pars.awk parameters/pars.csv
	
# Clean output files

clean:
	rm -f $(exec) $(dep_path)/*.d $(obj_path)/*.o $(inc_path)/flot.h
	rm -r $(libreg_inc)/pars.h $(libreg_inc)/init_pars.h 
	rm -rf results/debug results/csv results/webplots/tests/* results/webplots/sandbox/*
	rm -rf scripts/test/HL_LHC/cctest scripts/test/HL_LHC/results 

$(exec): $(objects) $(libfg) $(libreg)
	@[ -d $(@D) ] || mkdir -p $(@D)
	$(CC) $(CFLAGS) -o $@ $^ $(libs)

# Dependencies

include $(wildcard $(dep_path)/*.d)

# C objects

$(obj_path)/%.o: %.c $(inc_path)/flot.h
	@[ -d $(@D) ]       || mkdir -p $(@D)
	@[ -d $(dep_path) ] || mkdir -p $(dep_path)
	$(CC) $(CFLAGS) -MD -MF $(@:$(obj_path)/%.o=$(dep_path)/%.d) $(includes) -c -o $@ $<

# Special targets

# flot header file

$(inc_path)/flot.h: $(inc_path)/flot/flot_header.h $(inc_path)/flot/flot_footer.h $(inc_path)/flot/flot_part0.htm $(inc_path)/flot/flot_part1.htm $(inc_path)/flot/flot_part2.htm $(inc_path)/flot/flot_part3.htm $(inc_path)/flot/flot_part4.htm
	$(inc_path)/flot/htmlquote.sh $^ >$@

# Make flot output files

flot:
	./scripts/sandbox/run_all.sh
	./scripts/tests/run_all.sh

sandbox:
	./scripts/sandbox/run_all.sh

tests:
	./scripts/tests/run_all.sh

hllhc:
	./scripts/tests/HL_LHC/make.sh

# Make test output the new reference

reference:
	rm -rf results/csv/reference
	cp -rp results/csv/tests results/csv/reference

# Generate test output and compare it to the reference

test:
	./scripts/tests/run_all.sh STANDARD
	status=0 ;\
	cd results/csv/reference && \
	for file in `find -type f` ;\
	do \
	    cmp "$$file" ../tests/"$$file" || status=1 ;\
	done ;\
	exit $$status

# Refresh flot related files to sdcard projects folder (for debian on Nexus 10)

sdrefresh:
	cp -r results/webplots/flot                 $(sd_path)
	cp -r results/webplots/flot-downsample      $(sd_path)
	cp -r results/webplots/flot-selection       $(sd_path)
	cp -r results/webplots/colorbox             $(sd_path)
	cp -r results/webplots/modernizr            $(sd_path)

# List targets

.PHONY: all clean reference test flot sandbox tests hllhc sdrefresh

# EOF
